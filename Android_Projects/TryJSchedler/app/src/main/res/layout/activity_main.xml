<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <EditText
            android:id="@+id/editDelay"
            android:inputType="number"

            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/buttonSetDelay"
            android:layout_marginEnd="8dp"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonSetDelay" />

        <Button
            android:id="@+id/buttonSetDelay"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/editDelay"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onBtnSetDelay"
            android:text="Set delay" />


        <EditText
            android:id="@+id/editDelayJobSchedule"
            android:inputType="number"

            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/buttonSetDelay"
            android:layout_marginEnd="8dp"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonScheduleJob" />

        <Button
            android:id="@+id/buttonScheduleJob"

            app:layout_constraintTop_toBottomOf="@+id/buttonSetDelay"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/editDelayJobSchedule"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onBtnScheduleJob"
            android:text="Schedule job"  />

        <Button
            android:id="@+id/buttonThrowException"

            app:layout_constraintTop_toBottomOf="@+id/buttonScheduleJob"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/buttonStopCommService"
            android:layout_marginEnd="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnThrowException"
            android:text="Throw exception" />

        <Button
            android:id="@+id/buttonStopCommService"

            app:layout_constraintLeft_toRightOf="@+id/buttonThrowException"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnStopCommService"
            android:text="Stop service"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonThrowException"/>

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="0dp"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStopCommService"
        app:layout_constraintVertical_bias="0.503"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
